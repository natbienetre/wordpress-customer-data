{
  "apiVersion": 2,
  "name": "vfs/file-upload-filename",
  "title": "File Upload Filename",
  "description": "Filename of the uploaded file",
  "category": "media",
  "icon": "heading",
  "ancestor": ["vfs/file-upload-fileinfo"],
  "supports": {
    "color": {
      "text": true,
      "background": false
    },
    "typography": {
      "fontSize": true,
      "lineHeight": true,
      "textAlign": true
    },
		"spacing": {
			"margin": true,
			"padding": true
		},
		"layout": {
			"allowJustification": false,
			"allowVerticalAlignment": true,
			"default": {
				"flexWrap": "nowrap"
			}
		}
  },
  "usesContext": ["nbFiles"],
  "attributes": {
    "showExtension": {
      "type": "boolean",
      "default": true
    },
    "fontSize": {
      "type": "string",
      "default": "medium"
    },
    "style": {
      "type": "object",
      "default": {
        "layout": {
          "type": "object",
          "default": {
            "selfStretch": "fill"
          }
        }
      }
    },
    "linkToDownload": {
      "type": "boolean",
      "default": true
    }
  },
  "editorScript": "file:./admin.js",
  "editorStyle": "file:./admin.css",
  "viewScriptModule": ["vfs-blocks-lib", "file:./frontend-interactivity.js"],
  "viewScript": ["file:./frontend.js"],
  "viewStyle": ["file:./frontend.css"],
  "textdomain": "vfs"
}
